<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/countLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q1"
        android:textSize="22sp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/questionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perguntas"
        android:textSize="24sp"
        android:layout_marginTop="60dp"/>

    <Button
        android:id="@+id/answerBtn1"
        android:layout_width="@dimen/perguntaBtn_width"
        android:layout_height="@dimen/perguntaBtn_heigth"
        android:text="Primeira Pergunta"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/answerBtn2"
        android:layout_width="@dimen/perguntaBtn_width"
        android:layout_height="@dimen/perguntaBtn_heigth"
        android:text="Segunda Pergunta"
        android:layout_marginTop="6dp"/>


    <Button
        android:id="@+id/answerBtn3"
        android:layout_width="@dimen/perguntaBtn_width"
        android:layout_height="@dimen/perguntaBtn_heigth"
        android:text="Terceira Pergunta"
        android:layout_marginTop="6dp"/>


    <Button
        android:id="@+id/answerBtn4"
        android:layout_width="@dimen/perguntaBtn_width"
        android:layout_height="@dimen/perguntaBtn_heigth"
        android:text="Quarta Pergunta"
        android:layout_marginTop="6dp"/>


</LinearLayout>